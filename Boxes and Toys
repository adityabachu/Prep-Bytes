import java.util.*;
import java.io.*;

public class Main {
  public static void main(String args[]) throws IOException {
    
    //write your code here
    int count = 0;
    Scanner sc = new Scanner(System.in);
    int n = sc.nextInt();
    for(int i = 0; i < n; i++)
    {
       int t = sc.nextInt();
       int c = sc.nextInt();
       if(c - t >= 2)
       {
         count = count + 1;
       }
       
    }
    System.out.println(count);
    
  }
}
